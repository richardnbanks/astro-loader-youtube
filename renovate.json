{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": false
    },
    {
      "matchManagers": ["npm"],
      "groupName": "{{manager}}"
    },
    {
      "matchManagers": ["ci"],
      "enabled": false
    }
  ]
}